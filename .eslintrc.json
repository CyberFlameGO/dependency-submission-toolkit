{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "plugin:github/recommended", 
        "plugin:github/typescript"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "github"
    ],
    "rules": {
    },
    "overrides": [
        {
            "files": ["test/**"],
            "rules": {
              "i18n-text/no-en": "off",
              "filenames/match-regex": "off"
            }
          },
          {
            "files": ["jest.config.js"],
            "rules": {
              "filenames/match-regex": "off",
              "import/no-commonjs": "off"
            }
          }
    ],
    "ignorePatterns": ["dist/"]
}

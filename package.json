{
  "name": "@github/dependency-submission-toolkit",
  "version": "1.0.1",
  "description": "A TypeScript library for creating dependency snapshots.",
  "main": "dist/index.js",
  "prepare": "npm run build",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "check": "run-p -l --continue-on-error --aggregate-output check:*",
    "check:build": "tsc --noEmit",
    "check:format": "prettier . --check",
    "check:lint": "eslint .",
    "package": "ncc build --source-map --license licenses.txt",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "all": "npm run build && npm run check && npm run package && npm test"
  },
  "prettier": "@github/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/github/dependency-submission-toolkit.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/github/dependency-submission-toolkit/issues"
  },
  "homepage": "https://github.com/github/dependency-submission-toolkit#readme",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.0.0",
    "@octokit/rest": "^18.12.0",
    "openapi-typescript": "^5.2.0"
  },
  "devDependencies": {
    "@github/prettier-config": "^0.0.4",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.10.5",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.6",
    "jest": "^27.2.5",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4",
    "npm-run-all": "^4.1.5"
  }
}
